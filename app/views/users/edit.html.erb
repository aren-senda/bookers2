<div class="container">

                <h2>User info</h2>
                   <% if @user.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
                        <ul>
                          <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                      <div class="row">
                      <div class="col-xs-2">

                        <%= form_for(@user) do |f| %>
                        <label>Name</label>
                          <%= f.text_field :name, autofocus: true, class:"name width" %>
                        <label>Image</label>
                            <%= f.attachment_field :profile_image, class: "user_image" %>
                        <label>Introduction</label>
                          <%= f.text_area :introduction, autofocus: true, class:"introduction width clear_fix" %>
                        <%= f.submit "Update User" %>
                      <% end %>
    </div>
  </div>
</div>